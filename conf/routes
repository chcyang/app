# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                    controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

GET         /space               controllers.BackLogSpaceController.getSpace

GET         /upload              controllers.HomeController.upload

POST        /upload              controllers.BackLogFileController.upload

GET         /filesearch          controllers.HomeController.filesearch

POST        /filesearch          controllers.BackLogFileController.doEsSearch

GET         /addIndex            controllers.BackLogFileController.addIndex

GET         /getAllIssue         controllers.BackLogSpaceController.getAllIssueHours(assignee: String)